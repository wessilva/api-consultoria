{
  "compilerOptions": {
    /* Configurações Base */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "sourceMap": true,

    /* Caminhos */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Módulos */
    "moduleResolution": "Node",
    "esModuleInterop": true,

    /* Regras Estritas */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "src/@types/**/*"],
  "exclude": ["node_modules"]
}